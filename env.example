# Flask Configuration
FLASK_ENV=development
FLASK_APP=app
SECRET_KEY=dev-change-me-in-production

# Database Configuration
DATABASE_URL=sqlite:///energy.db
# For PostgreSQL: DATABASE_URL=postgresql://wattboard:wattboard_password@db:5432/wattboard

# MQTT Configuration
MQTT_BROKER_HOST=broker
MQTT_BROKER_PORT=1883
MQTT_TOPICS=sensor/+/+/reading

# Timezone
TIMEZONE=America/Toronto
SITE_DEFAULT_TZ=America/Toronto

# Email Configuration (for alerts)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Rollup Configuration
ROLLUPS_DAILY_TIME=00:00

# Demo Mode
DEMO_MODE_ENABLED=false
